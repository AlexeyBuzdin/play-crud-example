# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Tasks
GET     /hotel/all               controllers.Hotels.allHotel
GET     /hotel/new               controllers.Hotels.newHotel
POST    /hotel/save              controllers.Hotels.saveHotel
GET     /hotel/:id               controllers.Hotels.openHotel(id: Long)
POST    /hotel/:id/delete        controllers.Hotels.deleteHotel(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
